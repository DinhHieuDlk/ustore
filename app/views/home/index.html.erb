    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="latest-product">
                        <h2 class="section-title">Latest Products</h2>
                        <div class="product-carousel">
                        <%@product.last(10).each do |product|%>
                            <div class="single-product">
                                <div class="product-f-image">
                                <%=image_tag product.image.url(:medium)%>
                                    <div class="product-hover">
                                    <%=link_to line_items_path(:product_id=> product, :quantity=>1),class:"add-to-cart-link" ,method: :post, remote: true do%>
                                        <i class="fa fa-shopping-cart"></i> Add to cart</a>
                                        <%end%>
                                        <%= link_to product , class:"view-details-link" do%>
                                        <i class="fa fa-link"></i> See details
                                        <%end%>
                                    </div>
                                </div>
                        
                                <h2><%= link_to product.name, product_path(product)%></h2>
                                
                                <div class="product-carousel-price">
                                    <ins><%=product.price%></ins>
                                </div> 
                            </div>
                            <%end%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End main content area -->
    
